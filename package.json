{
	"name": "my-snow-monkey-boilerplate",
	"version": "1.0.0",
	"scripts": {
		"start": "run-s wp-env-start watch",
		"wp-env-start": "wp-env start",
		"wp-env-stop": "wp-env stop",
		"postcss": "postcss src/styles/style.css --dir my-snow-monkey",
		"build": "run-p build:*",
		"build:styles": "npm run postcss",
		"watch": "run-p watch:*",
		"watch:postcss": "npm run postcss -- -w",
		"watch:browser-sync": "browser-sync start --proxy \"localhost:8888\" --files \"my-snow-monkey/\"",
		"lint": "run-p lint:*",
		"lint:stylelint": "stylelint \"**/*.css\"",
		"lint:prettier": "prettier --check .",
		"fix": "run-s fix:{stylelint,prettier}",
		"fix:stylelint": "npm run lint:stylelint -- --fix",
		"fix:prettier": "prettier --write ."
	},
	"devDependencies": {
		"@wordpress/browserslist-config": "6.20.0",
		"@wordpress/env": "10.20.0",
		"@wordpress/prettier-config": "4.20.0",
		"@wordpress/stylelint-config": "23.12.0",
		"browser-sync": "3.0.3",
		"lefthook": "1.11.3",
		"npm-run-all2": "7.0.2",
		"postcss": "8.5.3",
		"postcss-cli": "11.0.1",
		"postcss-import": "16.1.0",
		"postcss-preset-env": "10.1.5",
		"postcss-sort-media-queries": "5.2.0",
		"stylelint": "16.15.0",
		"stylelint-config-recess-order": "6.0.0"
	},
	"volta": {
		"node": "22.14.0"
	}
}
