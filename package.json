{
	"name": "my-snow-monkey-boilerplate",
	"version": "1.0.0",
	"scripts": {
		"start": "run-s wp-env-start watch",
		"wp-env-start": "wp-env start",
		"wp-env-stop": "wp-env stop",
		"import-db": "wp-env run cli wp db import sql/env.sql",
		"export-db": "wp-env run cli wp db export sql/env.sql",
		"postcss": "postcss src/styles/style.css --dir my-snow-monkey",
		"build": "run-p build:*",
		"build:styles": "npm run postcss",
		"watch": "run-p watch:*",
		"watch:postcss": "npm run postcss -- -w",
		"watch:browser-sync": "browser-sync start --proxy \"localhost:8888\" --files \"my-snow-monkey/\"",
		"lint": "run-p lint:*",
		"lint:stylelint": "stylelint \"**/*.css\"",
		"lint:prettier": "prettier --check .",
		"fix": "run-s fix:{stylelint,prettier}",
		"fix:stylelint": "npm run lint:stylelint -- --fix",
		"fix:prettier": "prettier --write ."
	},
	"devDependencies": {
		"@wordpress/browserslist-config": "6.8.0",
		"@wordpress/env": "10.8.0",
		"@wordpress/prettier-config": "4.8.0",
		"@wordpress/stylelint-config": "23.0.0",
		"browser-sync": "3.0.2",
		"lefthook": "1.7.15",
		"npm-run-all2": "6.2.3",
		"postcss": "8.4.47",
		"postcss-cli": "11.0.0",
		"postcss-import": "16.1.0",
		"postcss-preset-env": "10.0.3",
		"postcss-sort-media-queries": "5.2.0",
		"stylelint": "16.9.0",
		"stylelint-config-recess-order": "5.1.1"
	},
	"volta": {
		"node": "20.17.0"
	}
}
