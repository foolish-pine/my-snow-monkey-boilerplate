{
	"name": "my-snow-monkey-boilerplate",
	"type": "module",
	"version": "1.0.0",
	"scripts": {
		"wp-env": "wp-env",
		"postcss": "postcss src/styles/style.css --dir dist",
		"build": "run-p build:*",
		"build:styles": "npm run postcss",
		"watch": "run-p watch:*",
		"watch:styles": "npm run postcss -- -w",
		"watch:server": "browser-sync start --proxy \"localhost:8888\" --files .",
		"lint": "run-p lint:*",
		"lint:stylelint": "stylelint '**/*.css'",
		"lint:prettier": "prettier . --check --ignore-unknown",
		"fix": "run-s fix:{stylelint,prettier}",
		"fix:stylelint": "npm run lint:stylelint -- --fix",
		"fix:prettier": "npm run lint:prettier -- --write"
	},
	"devDependencies": {
		"@wordpress/browserslist-config": "6.39.0",
		"@wordpress/env": "10.39.0",
		"@wordpress/prettier-config": "4.39.0",
		"@wordpress/stylelint-config": "23.31.0",
		"autoprefixer": "10.4.24",
		"browser-sync": "3.0.4",
		"cssnano": "7.1.2",
		"lefthook": "2.0.16",
		"npm-run-all2": "8.0.4",
		"postcss": "8.5.6",
		"postcss-cli": "11.0.1",
		"postcss-import": "16.1.1",
		"postcss-nested": "7.0.2",
		"postcss-preset-env": "11.1.2",
		"stylelint": "16.26.1",
		"stylelint-config-recess-order": "7.6.0"
	},
	"volta": {
		"node": "24.13.0"
	}
}
