{
	"name": "my-snow-monkey-boilerplate",
	"type": "module",
	"version": "1.0.0",
	"scripts": {
		"start": "run-s start:{wp,vite}",
		"start:vite": "vite",
		"start:wp": "wp-env start",
		"stop": "wp-env stop",
		"import-db": "wp-env run cli wp db import sql/env.sql",
		"export-db": "wp-env run cli wp db export sql/env.sql",
		"build": "vite build --emptyOutDir",
		"lint": "run-p lint:*",
		"lint:tsc": "tsc --noEmit",
		"lint:eslint": "ESLINT_USE_FLAT_CONFIG=true eslint \"**/*.{js,ts}\"",
		"lint:stylelint": "stylelint \"**/*.css\"",
		"lint:prettier": "prettier --check .",
		"lint:phpcs": "composer lint",
		"fix": "run-s fix:*",
		"fix:eslint": "npm run lint:eslint -- --fix",
		"fix:stylelint": "npm run lint:stylelint -- --fix",
		"fix:prettier": "prettier --write .",
		"fix:phpcbf": "composer format"
	},
	"devDependencies": {
		"@eslint/js": "9.4.0",
		"@wordpress/browserslist-config": "6.0.0",
		"@wordpress/env": "10.0.0",
		"@wordpress/prettier-config": "4.0.0",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-simple-import-sort": "12.1.0",
		"globals": "15.3.0",
		"lefthook": "1.6.15",
		"npm-run-all2": "6.2.0",
		"postcss-preset-env": "9.5.14",
		"prettier": "3.3.0",
		"stylelint": "16.6.1",
		"stylelint-config-recess-order": "5.0.1",
		"stylelint-config-standard": "36.0.0",
		"typescript": "5.4.5",
		"typescript-eslint": "7.12.0",
		"vite": "5.2.12"
	},
	"volta": {
		"node": "20.14.0"
	}
}
